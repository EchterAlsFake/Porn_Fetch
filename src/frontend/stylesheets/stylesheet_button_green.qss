QPushButton {
    background-color: #4CAF50; /* Green */
    font: bold 14px;
    min-width: 5em;
    padding: 3px;
    color: white;
    border-radius: 10px;
}

QPushButton:hover {
    background-color: #66BB6A; /* Lighter green */
}

QPushButton:pressed {
    background-color: #388E3C; /* Dark green */
}
